@* Index.cshtml *@
@model List<BabyCareProject.Entity.Dtos.TestimonialDtos.ResultTestimonialDto>

@{
    Layout = "~/Areas/Admin/Views/Layout/AdminLayout.cshtml";
    ViewData["Title"] = "Testimonial Listesi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Testimonial Listesi</h2>
        <a class="btn btn-primary text-white btn-sm" href="/Admin/Testimonial/Create">Yeni Testimonial Ekle</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>Görsel</th>
                <th>Ad Soyad</th>
                <th>Unvan</th>
                <th>Puan</th>
                <th>Yorum</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" width="80" class="img-thumbnail rounded-circle" /></td>
                    <td>@item.FullName</td>
                    <td>@item.Title</td>
                    <td>@item.Rating</td>
                    <td>@item.Comment</td>
                    <td class="text-center">
                        <a href="/Admin/Testimonial/Update/@item.Id" class="btn btn-sm btn-warning">Güncelle</a>
                        <a href="/Admin/Testimonial/Delete/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
