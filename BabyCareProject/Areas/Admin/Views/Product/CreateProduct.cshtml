@model CreateProductDto

@{
    ViewData["Title"] = "Yeni ÜRün Ekle";
}

<h3>@ViewBag.Title</h3>

<form method="post">
    <label>Profil Resmi Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Ürün Adı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
    <br />
    <label>Fiyat</label>
    <input type="number" asp-for="Price" class="form-control" />
    <br />
    <label>Eğitmen</label>
    <select asp-for="InstructorName" asp-items="@ViewBag.Instructors" class="form-control">
        <option disabled selected>Eğitmen Seçiniz</option>
    </select>
    <br />

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

