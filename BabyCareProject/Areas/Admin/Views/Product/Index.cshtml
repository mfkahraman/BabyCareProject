@model List<ResultProductDto>

@{
    ViewData["Title"] = "Ürünler";
}

<h3>@ViewBag.Title</h3>
@{
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Fotoğrafı</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Fiyat</th>
        <th>Eğitmen</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.InstructorName</td>
            <td>
                <a asp-controller="Product" asp-area="Admin" asp-action="UpdateProduct" asp-route-id="@item.ProductId" class="btn btn-warning">Güncelle</a>
                <a asp-controller="Product" asp-area="Admin" asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
<a asp-controller="Product" asp-area="Admin" asp-action="CreateProduct" class="btn btn-danger">Yeni Ürün Ekle</a>
