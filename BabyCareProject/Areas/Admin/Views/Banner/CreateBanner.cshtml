@model CreateBannerDto

@{
    ViewData["Title"] = "Yeni Banner Ekle";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayout.cshtml";
}

<h2 class="mb-4 text-primary">
    <i class="fas fa-plus me-2"></i> Yeni Banner Ekle
</h2>

<!-- Hata özeti (opsiyonel ama kullanışlı) -->
<partial name="_ValidationSummary" />

<form asp-action="CreateBanner" method="post" enctype="multipart/form-data" class="row g-4">

    <div class="col-md-12">
        <label asp-for="Slogan" class="form-label fw-semibold">Slogan</label>
        <input asp-for="Slogan" class="form-control" placeholder="Örn: Gülümseyen Yüzler, Sağlıklı Nesiller" />
        <span asp-validation-for="Slogan" class="text-danger small"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Title" class="form-label fw-semibold">Başlık</label>
        <input asp-for="Title" class="form-control" placeholder="Başlık metni girin" />
        <span asp-validation-for="Title" class="text-danger small"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
        <textarea asp-for="Description" rows="4" class="form-control" placeholder="Açıklama girin"></textarea>
        <span asp-validation-for="Description" class="text-danger small"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="ImageFile" class="form-label fw-semibold">Banner Görseli</label>
        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger small"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="IsActive" class="form-label fw-semibold d-block">Aktif Mi?</label>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" asp-for="IsActive" />
            <label class="form-check-label" for="IsActive">Bu banner'ı aktif olarak ayarla</label>
        </div>
    </div>

    <div class="col-12 text-center mt-4">
        <button type="submit" class="btn btn-success px-5">
            <i class="fas fa-save me-2"></i> Kaydet
        </button>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
