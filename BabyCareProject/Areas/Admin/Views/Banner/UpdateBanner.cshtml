@model UpdateBannerDto

@{
    ViewData["Title"] = "Banner Güncelle";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayout.cshtml";
}

<h2 class="mb-4 text-primary">
    <i class="fas fa-edit me-2"></i> Banner Güncelle
</h2>

<partial name="_ValidationSummary" />

<form asp-action="UpdateBanner" method="post" enctype="multipart/form-data" class="row g-4">

    <input type="hidden" asp-for="Id" />

    <div class="col-md-12">
        <label asp-for="Slogan" class="form-label fw-semibold">Slogan</label>
        <input asp-for="Slogan" class="form-control" />
        <span asp-validation-for="Slogan" class="text-danger small"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Title" class="form-label fw-semibold">Başlık</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger small"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
        <textarea asp-for="Description" rows="4" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger small"></span>
    </div>

    <div class="col-md-12">
        <label class="form-label fw-semibold d-block">Mevcut Görsel</label>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Mevcut Görsel" class="img-thumbnail" style="max-height: 200px;" />
        }
        else
        {
            <p class="text-muted">Görsel bulunamadı</p>
        }
    </div>

    <div class="col-md-12">
        <label asp-for="ImageFile" class="form-label fw-semibold">Yeni Görsel Seç (opsiyonel)</label>
        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger small"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="IsActive" class="form-label fw-semibold d-block">Aktif Mi?</label>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" asp-for="IsActive" />
            <label class="form-check-label" for="IsActive">Bu banner'ı aktif olarak ayarla</label>
        </div>
    </div>

    <div class="col-12 text-center mt-4">
        <button type="submit" class="btn btn-warning px-5">
            <i class="fas fa-save me-2"></i> Güncelle
        </button>
    </div>

</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
