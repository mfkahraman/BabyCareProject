@model BabyCareProject.Entity.Dtos.OurServiceDtos.UpdateOurServiceDto

@{
    ViewData["Title"] = "Hizmeti Güncelle";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayout.cshtml";
}

<h2 class="mb-4 text-warning">
    <i class="fas fa-edit me-2"></i> Hizmeti Güncelle
</h2>

<form asp-action="UpdateOurService" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Title" class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-3">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="IconUrl" class="form-label">FontAwesome İkon Sınıfı</label>
            <input asp-for="IconUrl" class="form-control" placeholder="Örn: fas fa-heart" />
            <span asp-validation-for="IconUrl" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="IsActive" class="form-label">Aktif mi?</label>
            <select asp-for="IsActive" class="form-select">
                <option value="true">Evet</option>
                <option value="false">Hayır</option>
            </select>
        </div>

        <div class="col-md-12 mt-3">
            <button type="submit" class="btn btn-warning">
                <i class="fas fa-save me-1"></i> Güncelle
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
