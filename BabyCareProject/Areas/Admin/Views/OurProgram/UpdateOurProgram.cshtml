@using BabyCareProject.Entity.Dtos.OurProgramDtos
@model UpdateOurProgramDto

@{
    ViewData["Title"] = "Program Güncelle";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayout.cshtml";
}

<div class="container px-5 mt-4">
    <h2 class="mb-4 text-primary">
        <i class="fas fa-edit me-2"></i> Program Güncelle
    </h2>

    <form asp-action="UpdateOurProgram" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Title" class="form-label">Program Başlığı</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="InstructorId" class="form-label">Eğitmen</label>
                <select asp-for="InstructorId" class="form-select" asp-items="ViewBag.Instructors">
                    <option value="">-- Eğitmen Seçin --</option>
                </select>
                <span asp-validation-for="InstructorId" class="text-danger"></span>
            </div>

            <div class="col-md-12 mb-3">
                <label asp-for="Description" class="form-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Capacity" class="form-label">Kapasite</label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="SessionCount" class="form-label">Seans Sayısı</label>
                <input asp-for="SessionCount" class="form-control" />
                <span asp-validation-for="SessionCount" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DurationMinute" class="form-label">Süre (dk)</label>
                <input asp-for="DurationMinute" class="form-control" />
                <span asp-validation-for="DurationMinute" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Price" class="form-label">Fiyat (₺)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-md-12 mb-3">
                <label asp-for="ImageUrl" class="form-label">Görsel Linki</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="col-md-12 form-check form-switch mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label class="form-check-label" asp-for="IsActive">Aktif mi?</label>
            </div>

            <div class="col-12 mt-2">
                <button type="submit" class="btn btn-success me-2">
                    <i class="fas fa-save me-1"></i> Güncelle
                </button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
