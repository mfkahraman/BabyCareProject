@*
    _HomepageProgramsComponent
*@

<div class="container-fluid program py-5">
    <div class="container py-5">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
            <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Programlarımız</h4>
            <h1 class="mb-5 display-3">Ayşenur Bekaroğlu ile Uzman Gelişim ve Etkinlik Seansları</h1>
        </div>
        <div class="row g-5 justify-content-center">
            <!-- Program 1 -->
            <div class="col-md-6 col-lg-6 col-xl-4 wow fadeIn" data-wow-delay="0.1s">
                <div class="program-item rounded">
                    <div class="program-img position-relative">
                        <div class="overflow-hidden img-border-radius">
                            <img src="~/BabyCare-1.0.0/img/program-1.jpg" class="img-fluid w-100" alt="Eğlenceli İngilizce">
                        </div>
                        <div class="px-4 py-2 bg-primary text-white program-rate">1.899₺</div>
                    </div>
                    <div class="program-text bg-white px-4 pb-3">
                        <div class="program-text-inner">
                            <a href="#" class="h4">Duyusal Gelişim Seansı</a>
                            <p class="mt-3 mb-0">
                                Ayşenur Bekaroğlu tarafından birebir yürütülen bu özel seanslar; çocukların bilişsel, motor ve sosyal gelişimini desteklemek için bilimsel temellere dayalı olarak tasarlanmıştır.
                            </p>
                        </div>
                    </div>
                    <div class="program-teacher d-flex align-items-center border-top border-primary bg-white px-4 py-3">
                        <img src="~/BabyCare-1.0.0/img/program-teacher.jpg" class="img-fluid rounded-circle p-2 border border-primary bg-white" alt="Ayşenur Bekaroğlu" style="width: 70px; height: 70px;">
                        <div class="ms-3">
                            <h6 class="mb-0 text-primary">Ayşenur Bekaroğlu</h6>
                            <small>Çocuk Gelişimi Uzmanı</small>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between px-4 py-2 bg-primary rounded-bottom">
                        <small class="text-white"><i class="fas fa-wheelchair me-1"></i> 10 Kişilik</small>
                        <small class="text-white"><i class="fas fa-book me-1"></i> 8 Seans</small>
                        <small class="text-white"><i class="fas fa-clock me-1"></i> 45 Dakika</small>
                    </div>
                </div>
            </div>

            <!-- Program 2 -->
            <div class="col-md-6 col-lg-6 col-xl-4 wow fadeIn" data-wow-delay="0.3s">
                <div class="program-item rounded">
                    <div class="program-img position-relative">
                        <div class="overflow-hidden img-border-radius">
                            <img src="~/BabyCare-1.0.0/img/program-2.jpg" class="img-fluid w-100" alt="Yaratıcı Sanatlar">
                        </div>
                        <div class="px-4 py-2 bg-primary text-white program-rate">1.499₺</div>
                    </div>
                    <div class="program-text bg-white px-4 pb-3">
                        <div class="program-text-inner">
                            <a href="#" class="h4">Sanat & Oyun Atölyesi</a>
                            <p class="mt-3 mb-0">
                                El becerilerini ve özgüveni destekleyen kolaj, boyama, hamur ve serbest oyun aktiviteleri. Etkinlikler Alperen ve Handenur Bekaroğlu eşliğinde yürütülür.
                            </p>
                        </div>
                    </div>
                    <div class="program-teacher d-flex align-items-center border-top border-primary bg-white px-4 py-3">
                        <img src="~/BabyCare-1.0.0/img/program-teacher.jpg" class="img-fluid rounded-circle p-2 border border-primary bg-white" alt="Alperen Bekaroğlu" style="width: 70px; height: 70px;">
                        <div class="ms-3">
                            <h6 class="mb-0 text-primary">Ayşenur & Alperen Bekaroğlu</h6>
                            <small>Etkinlik Koordinatörleri</small>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between px-4 py-2 bg-primary rounded-bottom">
                        <small class="text-white"><i class="fas fa-wheelchair me-1"></i> 15 Kişilik</small>
                        <small class="text-white"><i class="fas fa-book me-1"></i> 6 Atölye</small>
                        <small class="text-white"><i class="fas fa-clock me-1"></i> 1 Saat</small>
                    </div>
                </div>
            </div>

            <!-- Program 3 -->
            <div class="col-md-6 col-lg-6 col-xl-4 wow fadeIn" data-wow-delay="0.5s">
                <div class="program-item rounded">
                    <div class="program-img position-relative">
                        <div class="overflow-hidden img-border-radius">
                            <img src="~/BabyCare-1.0.0/img/program-3.jpg" class="img-fluid w-100" alt="Doğa ve Bilim">
                        </div>
                        <div class="px-4 py-2 bg-primary text-white program-rate">1.299₺</div>
                    </div>
                    <div class="program-text bg-white px-4 pb-3">
                        <div class="program-text-inner">
                            <a href="#" class="h4">Bebek Spa & Masaj Seansı</a>
                            <p class="mt-3 mb-0">
                                Alperen ve Handenur Bekaroğlu tarafından uygulanan spa ve masaj seanslarıyla miniklerin hem bedensel rahatlaması hem de duyusal huzuru sağlanır.
                            </p>
                        </div>
                    </div>
                    <div class="program-teacher d-flex align-items-center border-top border-primary bg-white px-4 py-3">
                        <img src="~/BabyCare-1.0.0/img/program-teacher.jpg" class="img-fluid rounded-circle p-2 border border-primary bg-white" alt="Spa Uzmanı" style="width: 70px; height: 70px;">
                        <div class="ms-3">
                            <h6 class="mb-0 text-primary">Ayşenur & Alperen Bekaroğlu</h6>
                            <small>Bebek Spa Uygulayıcıları</small>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between px-4 py-2 bg-primary rounded-bottom">
                        <small class="text-white"><i class="fas fa-wheelchair me-1"></i> 8 Kişilik</small>
                        <small class="text-white"><i class="fas fa-book me-1"></i> 5 Seans</small>
                        <small class="text-white"><i class="fas fa-clock me-1"></i> 40 Dakika</small>
                    </div>
                </div>
            </div>

            <!-- View All -->
            <div class="d-inline-block text-center wow fadeIn" data-wow-delay="0.1s">
                <a href="#" class="btn btn-primary px-5 py-3 text-white btn-border-radius">Tüm Programları Gör</a>
            </div>
        </div>
    </div>
</div>
